@using W09_10_EFCodeFirst.Models
@model Person

@{
    ViewBag.Title = "New Person";
}

<div class="row">
    <div class="col-md-8">
        <h2>Edit Person</h2>
    </div>
    <div class="col-md-4">
        BUTTON TO HOME
    </div>
</div>

<hr />

@using (Html.BeginForm())
{
    <div class="input-group">
        <span class="input-group-addon">Name:  </span>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "New Person", @required = "required" })
    </div>
    <br />

    <div class="input-group">
        <span class="input-group-addon">Age:  </span>
        @Html.TextBoxFor(x => x.Age, new { @class = "form-control", placeholder = "New Person", @type = "number", min = 18 })
    </div>
    <br />

    <div class="input-group">
        <input type="submit" value="Save" class="btn btn-success" />
    </div>
}

<div class="input-group">
    @ViewBag.Message
</div>