
@{
    Layout = null;
    string[] names = new string[4] { "AA", "BB", "CC", "DD"};
    int index = 0;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index2</title>
</head>
<body>
    <div> 
        <ul>
            @foreach (string name in names)
            {
                if (index % 2 == 0)
                {
                    <li style="color:blue;">@name</li>
                }
                else
                {
                    <li style="color:red;">@name</li>
                }
                index++;
            }
        </ul>
    </div>
</body>
</html>
